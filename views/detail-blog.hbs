<html lang='en' class='h-100'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{blog.title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/public/css/style.css' />
  </head>

  <body class='d-flex flex-column h-100'>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-white shadow py-3'>
      <div class='container'>
        <a class='navbar-brand' href='/'>
          <img
            src='/public/assets/logo.png'
            alt='logo_adbi'
            width='100%'
            height='30'
          />
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/blog'>Blog</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/contact-me'>Contact
                Me</a>
            </li>
          </ul>
          {{#if isLogin}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
              <li class='nav-item'>
                <span
                  class='nav-link btn btn-outline-white ms-3 px-3 rounded-pill'
                >Hi! {{user.name}}</span>
              </li>
              <li class='nav-item'>
                <a
                  class='nav-link btn bg-green-teal text-white px-4 rounded-pill'
                  aria-current='page'
                  href='/logout'
                >Logout</a>
              </li>
            </ul>
          {{else}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
              <li class='nav-item'>
                <a
                  class='nav-link btn btn-outline-secondary ms-3 px-4 rounded-pill'
                  aria-current='page'
                  href='/sign-in'
                >Sign In</a>
              </li>
              <li class='nav-item'>
                <a
                  class='nav-link btn bg-green-teal text-white ms-3 px-4 rounded-pill'
                  aria-current='page'
                  href='/sign-up'
                >Sign Up</a>
              </li>
            </ul>
          {{/if}}
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <main class='container blog-detail'>
      <div class='row mt-5'>
        <h1 class='title mt-5 fw-bold'>{{title}}</h1>
        <h4 class='date mb-5'>
          <small class='text-muted'>{{post_date}}|{{author}}</small>
        </h4>
        <div class='col mb-5'>
          <img
            src='/public/assets/How-to-mute-yourself-on-Zoom--2-.jpg'
            class='img-fluid'
            alt='How-to-mute-yourself-on-Zoom'
          />
        </div>
        <div class='content'>
          <p class='mb-5'>{{content}}</p>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class='footer mt-auto py-3 bg-white text-center'>
      <span class='text-muted'>Â©2021 Agun.</span>
    </footer>
    <!-- End Footer -->

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>

  </body>

</html>