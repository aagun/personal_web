<html lang='en' class='h-100'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Sign In</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='public/css/style.css' />
  </head>

  <body class='d-flex flex-column h-100'>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-white shadow py-3'>
      <div class='container'>
        <a class='navbar-brand' href='/'>
          <img
            src='public/assets/logo.png'
            alt='logo_adbi'
            width='100%'
            height='30'
          />
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/blog'>Blog</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/contact-me'>Contact
                Me</a>
            </li>
          </ul>
          <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a
                class='nav-link btn btn-outline-secondary ms-3 px-4 rounded-pill'
                aria-current='page'
                href='/sign-in'
              >Sign In</a>
            </li>
            <li class='nav-item'>
              <a
                class='nav-link btn bg-green-teal text-white ms-3 px-4 rounded-pill'
                aria-current='page'
                href='/sign-up'
              >Sign Up</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    {{#if messages.success}}
      <div class='alert alert-success alert-dismissible fade show' role='alert'>
        {{messages.success}}
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='alert'
          aria-label='Close'
        ></button>
      </div>
    {{/if}}

    <main
      class='container-fuild d-flex align-items-center justify-content-center'
    >
      <!-- form -->
      <section class='container-form'>
        <p class='h2 text-center mb-4'>Sign In</p>
        <!-- Error alert -->
        {{#if messages.danger}}
          <div
            class='alert alert-danger alert-dismissible fade show'
            role='alert'
          >
            {{messages.danger}}
            <button
              type='button'
              class='btn-close'
              data-bs-dismiss='alert'
              aria-label='Close'
            ></button>
          </div>
        {{/if}}
        <!-- End error alert -->

        <form action='/sign-in' method='POST'>
          {{#if msg}}
            <div class='alert alert-danger' role='alert'>
              {{msg}}
            </div>
          {{/if}}
          <div class='mb-3'>
            <label for='inputTitle' class='form-label fw-bold'>Email</label>
            <input
              name='email'
              type='text'
              class='form-control {{errorMessages.title.appendClass}}'
              id='inputTitle'
              value='{{post.title}}'
            />
            <div
              id='validationServerUsernameFeedback'
              class='{{errorMessages.title.feedback}}'
            >
              {{errorMessages.title.msg}}
            </div>
          </div>
          <div class='mb-2'>
            <label for='inputTitle' class='form-label fw-bold'>Password</label>
            <input
              name='password'
              type='password'
              class='form-control {{errorMessages.title.appendClass}}'
              id='inputTitle'
              value='{{post.title}}'
            />
            <div
              id='validationServerUsernameFeedback'
              class='{{errorMessages.title.feedback}}'
            >
              {{errorMessages.title.msg}}
            </div>
          </div>
          <p class='mb-4'>Doesn't have an account?
            <a href='/sign-up' class='link-primary'>Sign Up Here</a></p>
          <button
            type='submit'
            class='btn btn-green-teal w-100 mt-1'
          >Submit</button>
        </form>
      </section>
      <!-- end form -->
    </main>

    <!-- Footer -->
    <footer class='footer mt-auto py-3 bg-white text-center'>
      <span class='text-muted'>Â©2021 Agun.</span>
    </footer>
    <!-- End Footer -->

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>

  </body>

</html>