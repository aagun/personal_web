<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Blog | Agun</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='public/css/style.css' />
  </head>

  <body class='d-flex flex-column h-100'>
    <!-- Navbar -->
    <nav class='navbar navbar-expand-lg navbar-light bg-white shadow py-3'>
      <div class='container'>
        <a class='navbar-brand' href='/'>
          <img
            src='public/assets/logo.png'
            alt='logo_adbi'
            width='100%'
            height='30'
          />
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarSupportedContent'
          aria-controls='navbarSupportedContent'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/'>Home</a>
            </li>
            <li class='nav-item'>
              <a
                class='nav-link fw-bold text-green-teal'
                aria-current='page'
                href='/blog'
              >Blog</a>
            </li>
            <li class='nav-item'>
              <a class='nav-link' aria-current='page' href='/contact-me'>Contact
                Me</a>
            </li>
          </ul>
          {{#if isLogin}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
              <li class='nav-item'>
                <span
                  class='nav-link btn btn-outline-white ms-3 px-3 rounded-pill'
                >Hi! {{user.name}}</span>
              </li>
              <li class='nav-item'>
                <a
                  class='nav-link btn bg-green-teal text-white px-4 rounded-pill'
                  aria-current='page'
                  href='/logout'
                >Logout</a>
              </li>
            </ul>
          {{else}}
            <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
              <li class='nav-item'>
                <a
                  class='nav-link btn btn-outline-secondary ms-3 px-4 rounded-pill'
                  aria-current='page'
                  href='/sign-in'
                >Sign In</a>
              </li>
              <li class='nav-item'>
                <a
                  class='nav-link btn bg-green-teal text-white ms-3 px-4 rounded-pill'
                  aria-current='page'
                  href='/sign-up'
                >Sign Up</a>
              </li>
            </ul>
          {{/if}}
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    {{#if messages.success}}
      <div class='alert alert-success alert-dismissible fade show' role='alert'>
        {{messages.success}}
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='alert'
          aria-label='Close'
        ></button>
      </div>
    {{/if}}

    <main
      class='container-fluid d-flex align-items-center justify-content-center py-5'
    >
      <!-- list blog -->
      <section class='container-blog'>
        {{#if isLogin}}
          <a class='btn bg-green-teal text-white mb-5 px-4' href='/add-blog'>Add
            New Blog</a>
        {{/if}}
        <div id='contents' class='blog-list'>
          <!-- dynamic content would be here -->
          {{#each blogs}}
            <div class='blog-list-item'>
              <div class='blog-image'>
                <a href='/detail-blog/{{this.id}}' target='_blank'>
                  <img src='{{this.image}}' alt='{{this.image}}' />
                </a>
              </div>
              <div class='blog-content'>
                {{#if this.isLogin}}
                  <div class='btn-group d-flex justify-content-end'>
                    <a
                      href='/edit-blog/{{this.id}}'
                      class='btn btn-secondary'
                    >Edit</a>
                    <a
                      href='/delete-blog/{{this.id}}'
                      class='btn btn-danger'
                    >Delete</a>
                  </div>
                {{/if}}
                <h1 class='text-justify'>
                  <a
                    href='/detail-blog/{{this.id}}'
                    target='_blank'
                  >{{this.title}}</a>
                </h1>
                <div class='detail-blog-content'>
                  <span>
                    {{this.post_date}}
                    -
                    {{this.author}}
                    -
                    {{this.post_age}}
                  </span>
                </div>
                <p>{{this.content}}</p>
              </div>
            </div>
          {{/each}}
        </div>
      </section>
      <!-- end list blog -->
    </main>

    <footer class='footer mt-auto py-3 bg-white text-center'>
      <span class='text-muted'>Â©2021 Agun.</span>
    </footer>

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
      crossorigin='anonymous'
    ></script>

  </body>

</html>